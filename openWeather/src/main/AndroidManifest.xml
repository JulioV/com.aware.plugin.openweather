<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.openweather" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <service android:label="OpenWeather" android:exported="true" android:name="com.aware.plugin.openweather.Plugin"/>
        <service android:exported="true" android:name="com.aware.plugin.openweather.Plugin$OpenWeather_Service" />
        <activity android:exported="true" android:launchMode="singleInstance" android:configChanges="keyboard|keyboardHidden|screenSize" android:name="com.aware.plugin.openweather.Settings"/>
        <provider android:writePermission="com.aware.WRITE_CONTEXT_DATA" android:exported="true" android:name="com.aware.plugin.openweather.Provider" android:readPermission="com.aware.READ_CONTEXT_DATA" android:authorities="${applicationId}.provider.openweather" />
    </application>

</manifest>
